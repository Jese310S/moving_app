    <div class="jumbotron center container">
        <div class="card">
        <%= image_tag @listings.display_image if @listings.image.attached? %>
        <div class="card-body">
            <h4 class="card-title">
                <%= @user.name%>
                <%= @listings.title %>
            </h4>
            <p class="card-text">
                <%= @listings.comment %>
                <br>
                <%= @listings.moving_date %>
                <br>
                <%= @listings.moving_time%>
                <br>
                <%= @listings.price%>
            </p>
            <a href="#" class="btn btn-primary">Reply to Job</a>
        </div>
        </div>
    </div>